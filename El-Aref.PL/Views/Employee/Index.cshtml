@model IEnumerable<Employee>

<h1>All Employees</h1>
<br />
<br />

@* <div class="m-3 alert alert-danger" >
    <p> @ViewData["Message"]</p> 
    </div> *@ 

@* <div class="m-3 alert alert-danger">
    <p> @ViewBag.message</p> 
    </div> *@

@if(!string.IsNullOrEmpty(TempData["Message"] as string)) 
{
    <div class="m-3 alert alert-info"> 
        <p> @TempData["Message"] </p> 
    </div>
}

<form>
    <div class="container m-4 justify-content-center d-flex" >
        <div class="col-6  m-2">
            <input id="SearchInput" placeholder="Search By Name" name="SearchInput" class="form-control" />
        </div>
        <div class="col-6 m-2" >
            <input type="submit" class="btn btn-success" value="Search" />
        </div>
   </div>
</form>


<a asp-action="Create" asp-controller="Employee" class="btn btn-primary">Create Employee</a>

<br />
<br />

@if (Model != null && Model.Any())
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Age</th>
                <th>Salary</th>
                <th>Email</th>
                <th>Address</th>
                <th>Phone</th>
                <th>IsActive</th>
                <th>IsDeleted</th>
                <th>HuringDate</th>
                <th>CreateAt</th>
                <th>Department</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>
                        <img src="~/Files/Images/@emp.ImageName" height="50" class="img-fluid rounded-circle" />
                    </td>
                    <td>@emp.Name</td>
                    <td>@emp.Age</td>
                    <td>@emp.Salary</td>
                    <td>@emp.Email</td>
                    <td>@emp.Address</td>
                    <td>@emp.Phone</td>
                    <td>@emp.IsActive</td>
                    <td>@emp.IsDeleted</td>
                    <td>@emp.HiringDate</td>
                    <td>@emp.CreateAt</td>
                    <td>@emp.Department?.Name</td>

                    <partial name="_ButtonPartialView"
                             model="@(new ButtonPartialViewModel { Id = emp.Id, Controller = "Employee" })" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-4 alert alert-info">
        There are no Employees :(
    </div>
}
